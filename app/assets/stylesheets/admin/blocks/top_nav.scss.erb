@import "../../scss/mixins";
@import "../../scss/vars";

.top-naw-wrapper {
  @include simpleLinearGradient(#f4f4f4, #dedede); border-bottom: 1px solid #ccc; margin-bottom: 15px; box-shadow: 0 0 5px rgba(0, 0, 0, .35); border-bottom: 1px solid #777; padding: 5px 0;
  .top-nav-list {
    list-style: none;
    .tn-item {
      display: inline-block; vertical-align: top;
      .tn-link {
        padding: 7px 15px; color: #8c8c8c; display: block; @include transition(all .3s linear); font-size: 16px;
        border: 1px solid rgba(0, 0, 0, 0); border-radius: 4px;
        &:hover { @include simpleLinearGradient(#ededed, #c6c6c6); color: #8c8c8c; border: 1px solid #ccc; }
        &:active { @include simpleLinearGradient(#c6c6c6, #ededed); box-shadow: inset 1px 1px 2px rgba(0, 0, 0, .45); }
      }
    }
  }
}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
 .top-naw-wrapper {
   .top-nav-list {
     text-align: center; padding-bottom: 10px;
     .tn-link { padding: 7px 5px !important; }
   }
 }
}