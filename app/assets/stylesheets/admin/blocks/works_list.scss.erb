@import "../../scss/mixins";
@import "../../scss/vars";

.works-list-edit {
  list-style: none;
  .work-item {
    padding: 10px 0; border-bottom: 1px solid #666; margin-bottom: 10px; @include boxSizing(border-box);
    .aci-img-wrap {
      width: 100px; height: 100px; border: 1px solid #ccc; border-radius: 3px; background: #fff; float: left;
      .aci-img { max-height: 100px; max-width: 100px;  }
    }

    .wi-center {
      margin: 0 100px 0 110px;
      .wi-title { margin-bottom: 10px; font-size: 130%; line-height: 1.2; }
      .wi-description { margin-bottom: 10px; font-size: 110%; line-height: 1.6; font-style: italic; }
      .wi-type { color: #000; font-weight: bold; padding: 3px 2px; background: #ccc; }
    }
    .wi-actions { float: right; width: 90px; }
  }
}