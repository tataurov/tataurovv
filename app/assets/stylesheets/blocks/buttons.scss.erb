@import "../scss/mixins";
@import "../scss/vars";

input[type="submit"],
.button {
  cursor: pointer; display: inline-block; padding: 4px 10px 5px; font-size: 100%; line-height: 1.2; border-radius: 2px; background: $buttonDefaultType; box-shadow: 1px 1px 2px rgba(0, 0, 0, .4); border: 0; color: #000; text-shadow: 1px 1px 1px #ccc;
  @include transition(all .3s linear);
  &:hover { border: 0; background: $buttonDefaultTypeHover; box-shadow: 1px 1px 2px rgba(0, 0, 0, .1); color: #000; }
  &.delete,
  &.red-tepe {
    background: $buttonRedType; color: $buttonRedTypeText; text-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
    &:hover { background: $buttonRedTypeHover; }
  }
  &.blue-type {
    background: $buttonBlueType; color: $buttonBlueTypeText; text-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
    &:hover { background: $buttonBlueTypeHover; }
  }
}

