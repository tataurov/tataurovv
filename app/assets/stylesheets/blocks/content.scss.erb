//////////////////////////////////////////////////////////////////////
//  Content
////////////////////////////////////////////////////////////////////*/

#content { margin: 0 0 20px 2.5%; padding: 0 !important; width: 62.5%; float: left;
  &.full { margin: 0 0 20px 2.5%; padding: 0 !important;
    width: 95%;
    &.grid { margin: 0 0 20px 0%; }
  }
}

.home #content.full { width: 100%; }

#content {
  h4 a,
  h5 a { color: #555555; }
  h1 a:hover,
  h2 a:hover,
  h3 a:hover { color: #a7a7a3; }
}

#content {
  h4 a:hover, h5 a:hover {
    color: #a7a7a3;
  }
  .postThumb {
    margin: 0 0 20px 0 !important;
  }
}

#pageHead {
  padding: 20px 0 20px 0;
  margin: 0 2.5% 30px 2.5%;
  border-top: 1px solid #dfdfde;
  border-bottom: 1px solid #dfdfde;
  h1 {
    font-size: 1.4em;
    line-height: .7em;
    padding: 0;
    margin-bottom: 0;
    display: block;
    color: #555555;
    font-family: "Droid Serif", "Georgia", serif;
  }
  p {
    margin: 0!important;
    padding: 10px 0 0 0!important;
    color: #b2b2b2;
    line-height: 1em;
  }
}

/*Home ------------------*/

#home-banner {
  height: 450px;
  display: block;
  margin: 0px auto 0;
  width: 100%;
  position: relative;
  padding-top: 1px;
  overflow: hidden;
  background-color: #000;

  background-image: url(<%= asset_path 'top_banner.jpg'%>);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center top;

}

#banner-text {
  position: fixed;
  top: 250px;
  text-align: center;
  width: 100%;
}

#home-banner {
  h2 {
    text-align: center;
    color: #fff;
    font-size: 64px;
    text-transform: uppercase;
    display: block;
    text-shadow: 0 0 8px rgba(0, 0, 0, 1), 0 0 3px rgba(0, 0, 0, 1);
    position: relative;
    margin: 0 auto 0px;
    padding: 0 0px;
    font-family: "Philosopher", "Helvetica Neue", Helvetica, Arial, sans-serif;
  }
  p {
    text-align: center;
    color: #fff;
    font-family: "Philosopher", "Georgia", serif;
    font-size: 20px;
    display: block;
    text-shadow: 0 0 8px rgba(0, 0, 0, 1), 0 0 3px rgba(0, 0, 0, 1);
    position: relative;
    margin: 1px auto 1px;
  }
}

.home-section {
  margin-bottom: 20px!important; width: 100%;
  h3 { font-size: 1em; margin: 0 auto 30px; clear: both; background: transparent url(../images/line.gif) 0 center repeat-x; color: #555; text-align: center; font-family: "Philosopher", "Georgia", serif; width: 95%; text-transform: uppercase;
    span { background: #fff; padding: 7px 15px; border-radius: 2px; }
  }
}

.last { margin-right: 0 !important; clear: right; }
.clearboth { clear: both; display: block; font-size: 0; height: 0; line-height: 0; width: 100%; }

