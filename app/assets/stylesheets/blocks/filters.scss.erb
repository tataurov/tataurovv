.filter-wrap { text-align: center; }

.filter-nav {
  padding: 0!important; margin: 0 auto 20px auto!important; width: 95%;
  li {
    padding: 0; background: none; margin: 0 8px 8px 0; display: inline-block;
    a {
      font-size: 1em; background: #f0f0f0; display: inline-block; color: #7d7d7b!important; text-decoration: none; position: relative; cursor: pointer; padding: 7px 8px !important; border: none; border-radius: 2px; line-height: 1em; text-transform: uppercase;
      &:hover,
      &.selected {
        &,
        &:hover { background: #6a6a6a; color: #fff !important; }
      }
    }
  }
}
