.rubrics-nav-section { padding: 30px 0 20px; text-align: center; }
.filters-block { display: inline-block; }
.filter-title { color: #043224;  vertical-align: middle; position: relative; top: -5px; margin-right: 5px; font-size: 27px; font-family: 'Lobster', cursive; }
.filter-nav {
  display: inline-block; list-style: none; vertical-align: middle;
  .fn-item {
    float: left; margin: 0 5px 7px;
    .fn-link {
      display: block; border-radius: 6px; border: 1px solid transparent; font-size: 17px; text-decoration: none; color: #fff;
      background-color: #5aa68f; color: #043224; box-shadow: 1px 1px 1px rgba(0, 0, 0, .8);
      span {
        padding: 4px 15px 5px; display: block; margin: 1px; border: 1px dashed #fff; position: relative; z-index: 1; border-radius: 6px;
        &:before { content: ''; position: absolute; left: 0; top: 0; width: 100%; height: 100%; border-radius: 6px; z-index: -1; border: 1px dashed rgba(0, 0, 0, .3); }
      }
      &.selected {
        box-shadow: none; color: #fff; box-shadow: 0 0 1px rgba(0, 0, 0, .6);
        text-decoration: none; text-shadow: 1px 1px 1px rgba(0, 0, 0, .78);
      }
      .count- {
        font-size: 10px; letter-spacing: -.05em; position: relative; bottom: -2px;
        &:before { content: ' ('; }
        &:after { content: ')'; }
      }
    }
  }
}
