

//////////////////////////////////////////////////////////////////////
//  Footer
////////////////////////////////////////////////////////////////////*/

#footer {
  background: url(<%= asset_path 'wood.jpg'%>) 50% 0;
  color: #ffffff;
  .inside {
    max-width: 62.5em;
    margin: 0 auto 0;
    padding: 0px 0 0;
  }
  &.light {
    background: #f3f3f3;
    color: #a2a2a2;
    border-top: 5px solid #eeeeee;
  }
  .widget-box h3 {
    color: #fff;
  }
  &.light .widget-box h3 {
    color: #a2a2a2;
  }
  .meta {
    color: #919191;
  }
  &.light .meta {
    color: #cccccc;
  }
  .main {
    padding: 20px 0 10px 0;
    margin: 0 0 0 0;
  }
  .inside { box-shadow: 0 0 77px #000; background: rgba(0, 0, 0, .45); }
}

.footer-box {
  margin: 0 0 40px 20px;
  float: left;
  position: relative;
  p {
    padding: 0;
  }
}

#footer {
  color: #fff;
  a {
    color: #f6f6f6;
  }
  &.light a {
    color: #f4f4f4;
  }
  a:hover {
    color: #fff;
  }
  &.light a:hover {
    color: #eeeeee;
  }
  .secondary {
    margin: 0 25px 0;
    padding: 20px 0 0;
    border-top: 1px solid #fff;
  }
  &.light .secondary {
    border-top: 1px solid #dfdfdf;
  }
  .secondary {
    .left {
      float: left;
    }
    .right {
      float: right;
    }
  }
}
