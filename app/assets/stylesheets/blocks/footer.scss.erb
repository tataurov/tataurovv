.footer-section {
  background: url(<%= asset_path 'wood.jpg'%>) 50% 0; color: #fff; padding: 25px 0 45px; height: 100px; margin-top: -170px;
  box-shadow: inset 0 2px 15px rgba(0, 0, 0, .4);
  .left-col { float: left; }
  .right-col { float: right; }
}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
  .footer-section {
    background: url(<%= asset_path 'wood.jpg'%>) 50% 0; color: #fff; padding: 25px 0 45px; height: 100px; margin-top: -170px;
    box-shadow: inset 0 2px 15px rgba(0, 0, 0, .4);
    .left-col { float: none; padding: 10px 0; text-align: center; }
    .right-col { float: none; padding: 10px 0; text-align: center; }
  }
}