@import "../scss/mixins";
@import "../scss/vars";

.form {
  font-size: 130%;
  margin-bottom: 15px;
  .col-1 { width: 50%; float: left; @include boxSizing(border-box); padding-right: 15px; }
  .col-2 { width: 50%; float: left; @include boxSizing(border-box); }
  .fields {
    list-style: none; padding-top: 10px;
    .field { margin-bottom: 6px; }
    .label {
      width: 200px; float: left; padding-top: .15em;
      label { vertical-align: middle; font-size: 21px; line-height: 0.8; }
    }
    .input {
      display: block; vertical-align: middle; margin-left: 200px;
      textarea { height: 200px; }
      textarea,
      input[type="email"],
      input[type="password"],
      input[type="text"] {
        width: 100%; max-width: 300px; @include boxSizing(border-box);  border: 1px solid #666; border-radius: 2px; padding: 3px 10px; font-size: 17px; @include transition(all .3s linear);
        &:focus { border: 1px solid #9ab5b4; box-shadow: 0 0 2px #91b5ae, 0 0 4px #98b3b5; }
      }
      select { height: 27px; width: 100%; vertical-align: top; font-size: 17px; margin-top: 6px; max-width: 300px; @include boxSizing(border-box); }
    }
    .field-with-error {
      textarea,
      input[type="email"],
      input[type="password"],
      input[type="text"] {
        & { border: 1px solid $formErrorColor; box-shadow: 0 0 2px $formErrorColor, 0 0 4px $formErrorColor; }
      }
    }

    .actions { margin-top: 15px; }
    .error- { font-size: 90%; line-height: 1.1; vertical-align: middle; color: $formErrorColor; }
    .back-link,
    .button { margin: 0 7px 4px 0; }
  }
  .progress { height: 10px; margin: 5px 0; width: 0; @include simpleLinearGradient(#fff, #000); }
}

.images-fields {
  list-style: none; padding: 0 0 20px; border-top: 1px solid #ccc;
  .image-row { padding: 10px 0; margin-bottom: 10px; border-bottom: 1px solid #ccc; position: relative; }
  .upload-process {
    height: 120px; width: 120px; position: absolute; right: 0; top: 5px;
    .circles-wrp {
      svg { position: relative; z-index: 1; }
      .circles-text { background: #fff; border-radius: 100%; }
    }
  }
}

#files { min-height: 300px; }

.inline-field {
  display: inline-block; vertical-align: top; margin-right: 10px;
  &:last-child { margin-right: 0; }
  .if-label { height: 20px; }
  .if-input { height: 40px; }
}

.form-box {
  width: 400px; margin: 0 auto;
  &.new-session {
    margin: 60px auto 50px;
    .form .fields {
      .label { width: 100px; }
      .input { margin-left: 100px; }
    }
  }
}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
  .form-box {
    width: 300px; margin: 0 auto;
  }

  .form {
    font-size: 100%;
    margin-bottom: 20px;
    .fields {
      list-style: none; padding-top: 10px;
      .field { margin-bottom: 15px; }
      .label {
        width: auto; float: none; padding-top: .15em; margin-bottom: 11px;
        label { vertical-align: middle; font-size: 21px; line-height: 0.8; }
      }
      .input {
        display: block; vertical-align: middle; margin-left: 0;
      }
    }
    .col-1 { width: auto; float: none; margin-bottom: 15px; padding: 0; }
    .col-2 { width: auto; float: none; }
  }
}
