@import "../scss/mixins";
@import "../scss/vars";

.header-section {
  padding: 3px 0; @include simpleLinearGradient(#a90329, #6b1225); box-shadow: 0 0 4px rgba(0, 0, 0, .48); position: relative;
  z-index: 1;
  .header-wrapper {
    padding: 9px 0; border-radius: 6px; border: 1px dashed rgba(255, 255, 255, .35); position: relative; z-index: 1; margin: 0 -3px;
    &:before { content: ''; position: absolute; left: 0; top: 0; width: 100%; height: 100%; border-radius: 6px; z-index: -1;
      border: 1px dashed rgba(0, 0, 0, .3); }
  }

  .h-logo {
    font-family: 'Lobster', cursive; color: #fff; text-decoration: none; font-size: 35px; padding: 10px 0 0; white-space: nowrap;
    .l-slug { font-size: 12px; display: block; padding: 5px 0 0; opacity: .8; letter-spacing: 1.1px; }
  }
}

@media only screen and (max-width: 768px) and (orientation: portrait) {

}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
  .header-wrapper { text-align: center; }
  .h-logo { display: inline-block; }
  .top-nav .top-nav-list { float: none !important; display: inline-block; padding: 15px 0; }
}
@media screen and (max-width: 480px) and (orientation: landscape) {
  .base-width { padding: 0 10px; }
}

@media screen and (max-width: 480px) and (orientation: portrait) {
  .base-width { padding: 0 10px; }
}

