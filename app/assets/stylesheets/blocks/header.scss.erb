#header { width: 100%; position: relative; padding: 0 0 0 0; margin: 0 0 0 0!important; background: #fff;
  .inside { max-width: 62.5em; margin: 0 auto; position: relative; padding: 20px 0 20px 0; }
}

#logo {
  width: 400px; text-decoration: none; border: 0 !important; display: inline-block; margin: 0px 0 0 2.5%; float: left; padding: 0; text-transform: uppercase; font-size: 22px;
  h1 { margin: 0 !important; line-height: 1em !important; padding: 0 !important; font-size: 1.5em; font-weight: bold; color: #555;
  }
  a { border: 0; }
}

#header h1 {
  font-size: 1.5em;
  color: #555555;
  margin: 0;
  a {
    color: #555555 !important;
    &:hover {
      color: #555555 !important;
    }
  }
}

/* Top level navigation */

#main-nav {
  float: right;
  li { margin: 0 0 0 1.5em; display: inline-block; padding: 0; }
  ul {
    a { line-height: 25px; color: #8f8f8f; font-size: .75em; font-family: "Droid Serif", "Georgia", serif; }
  }
}
