@import "../scss/mixins";
@import "../scss/vars";

/* Works - list */

.works-list {
  text-align: justify; list-style: none;
  .wl-item {
    box-shadow: 1px 1px 5px rgba(0, 0, 0, .80); overflow: hidden; border-radius: 3px; width: 240px; height: 350px;
    display: inline-block; margin: 0 0 25px 0; padding-bottom: 0px; cursor: pointer;  position: relative;
    background-color: #dfdfdf; vertical-align: top;
    &.dummy- {
      vertical-align: top; width: 240px; height: 1px; display: inline-block; box-shadow: none; border: 0; background: none;
    }
    .wl-img {
      width: 100%; height: 100%; overflow: hidden; border-radius: 4px;
      img { width: 100%; border-radius: 4px; display: block; }
    }
    .wl-title { @include transition(all .1s linear); font-size: 1.15em; position: absolute; top: 0; right: 100%; text-align: center; width: 100%; display: block; height: 100%;
      span { @include transition(all .3s linear); opacity: 0; display: table-cell; height: 500px; width: 300px; vertical-align: middle; color: #fff; background-color: rgba(0, 0, 0, 0.60); padding: 7px; -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px; font-family: "Philosopher", Georgia, Times, "Times New Roman", serif;
      }
    }
    &:hover {
      .wl-title {
        right: 0;
        span { opacity: 1; }
      }
    }
  }

}

@media all and (device-width: 768px) and (device-height: 1024px) and (orientation: landscape) {
}

@media only screen and (max-width: 975px) {
  .works-list {
    text-align: center;
    .wl-item {
      margin-right: 15px;

    }
  }

}

@media only screen and (max-width: 768px) and (orientation: portrait) {
  .works-list {
    text-align: center;
  }
}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
  .works-list {
    text-align: center;
  }
}
@media screen and (max-width: 480px) and (orientation: landscape) {
  .works-list {
    text-align: center;
  }
}

@media screen and (max-width: 480px) and (orientation: portrait) {
  .works-list {
    text-align: center;
  }
}

