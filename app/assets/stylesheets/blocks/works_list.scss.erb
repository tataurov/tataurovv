@import "../scss/mixins";
@import "../scss/vars";

/* Works - list */

.works-list {
  text-align: justify; list-style: none;
  .wl-item {
    display: inline-block; margin: 0 0 25px 0; width: 240px; vertical-align: top;
    &.dummy- {
      vertical-align: top; width: 240px; height: 1px; display: inline-block; box-shadow: none; border: 0; background: none;
    }
  }
  .wl-top {
    box-shadow: 1px 1px 1px rgba(0, 0, 0, .3); overflow: hidden; border-radius: 1px; height: 350px;
    padding-bottom: 0px; cursor: pointer;  position: relative;
    background-color: #dfdfdf; vertical-align: top;
    .wl-img {
      width: 100%; height: 100%; overflow: hidden; border-radius: 1px;
      img { width: 100%; border-radius: 1px; display: block; }
    }
  }
  .wl-title {
    display: block; padding: 5px 0 20px; text-align: center; font-size: 20px;
  }
}

@media all and (device-width: 768px) and (device-height: 1024px) and (orientation: landscape) {
}

@media only screen and (max-width: 975px) {
  .works-list {
    text-align: center;
    .wl-item {
      margin-right: 15px;

    }
  }

}

@media only screen and (max-width: 768px) and (orientation: portrait) {
  .works-list {
    text-align: center;
  }
}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
  .works-list {
    text-align: center;
  }
}
@media screen and (max-width: 480px) and (orientation: landscape) {
  .works-list {
    text-align: center;
  }
}


