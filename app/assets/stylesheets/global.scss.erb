@import "scss/mixins";
@import "scss/vars";


/* images */
.aci-img-wrap {
  display: table;
  .aci-img-cell {
    vertical-align: middle; display: table-cell; width: 100%; height: 100%;
    .aci-img { display: block; margin: 0 auto; }
  }
}

.clearfix { display: block; }
.clearfix:after { content: '';  content: ''; width: 100%; clear: both; display: block; }

.usn * { -webkit-touch-callout: none; -webkit-user-select: none; -khtml-user-select: none; -moz-user-select: none; -ms-user-select: none; user-select: none; }
.bsbb { @include boxSizing('border-box'); }

.animated3s { -webkit-transition: all .3s linear; -moz-transition: all .3s linear; transition: all .3s linear; }
.animated5s { -webkit-transition: all .5s linear; -moz-transition: all .5s linear; transition: all .5s linear; }

.shadowed-box { background: #e8e8e8; border-radius: 3px; padding: 15px; box-shadow: 0 1px 2px rgba(0, 0, 0, .45); }