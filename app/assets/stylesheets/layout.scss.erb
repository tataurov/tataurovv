body {
  margin: 0;
  padding: 0;
  border: 0;
  position: relative;
  width: 100%;
  font-family: 'Roboto Condensed', sans-serif;
  color: #000;
  min-height: 100%;
  background: url(<%= asset_path 'bg_pattern.jpg'%>) 50% 50%;
  font-weight: 500;
  font-size: 14px;
  line-height: 1;
}
.page { min-height: 100%; padding-bottom: 170px;  }
.page-body { position: relative; min-width: 320px; overflow: hidden; width: 100%; }

.base-width { max-width: 1189px; margin: 0 auto; padding: 0 50px; -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

