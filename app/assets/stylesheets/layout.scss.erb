body {
  margin: 0;
  padding: 0;
  border: 0;
  position: relative;
  width: 100%;
  font-family: 'Roboto Condensed', sans-serif;
  color: #000;
  min-height: 100%;
  background: url(<%= asset_path 'bg_pattern.jpg'%>) 50% 50%;
  font-weight: 500;
  font-size: 14px;
  line-height: 1;
}
.page { min-height: 100%; padding-bottom: 170px;  }
.page-body { position: relative; min-width: 320px; overflow: hidden; width: 100%; }

.base-width { margin: 0 auto; padding: 0 50px; -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

@media only screen and (max-width: 768px) and (orientation: portrait) {
  .base-width { padding: 0 15px; }
}

@media only screen and (max-width: 480px), screen and (max-device-width: 480px), screen and (max-width: 600px) {
  .base-width { padding: 0 15px; }
}
@media screen and (max-width: 480px) and (orientation: landscape) {
  .base-width { padding: 0 10px; }
}

@media screen and (max-width: 480px) and (orientation: portrait) {
  .base-width { padding: 0 10px; }
}

