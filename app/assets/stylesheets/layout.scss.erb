body { background: #000; }

#container {
  width: 100%;
  margin: 0 auto;
}

.wrap {
  background: #fff;
  padding-top: 1px;
  box-shadow: 0 15px 12px rgba(0, 0, 0, .7);
  position: relative;

}
#main {
  margin: 0 auto;
  padding: 0 0 0px 0;
  max-width: 62.5em;
  min-height: 800px;
}

.home {
  #main {
    border: none;
  }
  &.page #content {
    padding-top: 0px !important;
  }
}

#main.full {
  background: none;
}

#content {
  padding: 0 0 0 0;
  float: left;
  margin: 0 0px 0 0;
  position: relative;
  width: 62.5%;
}

#sidebar {
  width: 27.5%;
  float: right;
  margin: 0 2.5% 0 0;
  padding: 0 0 0 0;
}

#footer {
  width: 100%;
  margin: 0 auto;
}

.two-thirds {
  width: 62.5%;
}

.one-third {
  width: 30%;
}