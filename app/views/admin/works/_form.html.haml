.form
  = form_for(@work, :html => { :multipart => true }) do |f|
    - if @work.errors.any?
      .message.error#error_explanation
        %ul
          - @work.errors.full_messages.each do |msg|
            %li= msg

    %ul.fields
      %li.field
        .label= f.label :title, 'Название'
        .input= f.text_field :title
      %li.field
        .label= f.label :description, 'Описание'
        .input= f.text_area :description
      %li.field
        .label
          Изображения:
        .input
          %ul.images-fields
            = f.fields_for :images, @work.images do |image|
              - if image.object.new_record?
                %li{:id => image.object_name.gsub(/[^0-9]+/,'')}
                  = image.label :file
                  = image.file_field :file
              - else
                %li{:id => image.object_name.gsub(/[^0-9]+/,'')}
                  = image_tag(image.object.file.url(:thumb))
                  = link_to('Delete', admin_image_url(image.object.id), :confirm => "Вы точно хотите удалить?", :method => :delete, :class => "button delete" )

      %li.actions
        .input
          = link_to request.referer, :class => "back-link" do
            %i.fa.fa-hand-o-left
            Назад
          = f.submit :class => "button", :value => "Сохранить"